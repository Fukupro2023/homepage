---
import Image from "astro/components/Image.astro";
import DefaultImage from "@/assets/images/default-image.jpeg";

type Props = {
	src?: string;
	title: string;
};

const { src, title } = Astro.props as Props;
---

{
  src ? (
    <Image
      src={src}
      alt={`${title}のサムネイル`}
      width={720}
      height={400}
    />
  ) : (
    <Image
      src={DefaultImage}
      alt={`${title}のサムネイル`}
      width={720}
      height={400}
    />
  )
}

<style>
  img {
    @apply object-cover w-40 h-40 flex-shrink-0 sm:w-80 md:h-40;
  }
</style>
