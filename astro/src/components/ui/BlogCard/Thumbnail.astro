---
import { Image } from "astro:assets";
import { PATH } from "@/constants";
import { blogCardStyles } from "./styles";

type Props = {
	src?: string;
	title: string;
};

const { src, title } = Astro.props as Props;
---

{
	(
		<img
			src={src ?? PATH.IMAGES("default-thumbnail.jpg")}
			alt={`${title}のサムネイル`}
			width={720}
			height={400}
			class={blogCardStyles.thumbnail}
		/>
	)
}
