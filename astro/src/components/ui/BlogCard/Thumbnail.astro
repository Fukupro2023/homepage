---
import Image from "astro/components/Image.astro";

type Props = {
	src?: string;
	title: string;
};

const { src, title } = Astro.props as Props;
---

{
  <Image
    src={src ?? "/images/default-thumbnail.jpg"}
    alt={`${title}のサムネイル`}
    width={720}
    height={400}
  />
}

<style>
  img {
    @apply object-cover w-40 h-40 flex-shrink-0 sm:w-80 md:h-40;
  }
</style>
