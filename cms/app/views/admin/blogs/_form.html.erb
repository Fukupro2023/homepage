<%= form_with(model: [:admin, blog],
             data: { controller: "markdown-editor" },
             class: "bg-white rounded-lg shadow-sm border border-gray-200 flex flex-col") do |f| %>

  <% if blog.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4">
      <p class="font-bold"><%= blog.errors.count %>件のエラーがあります</p>
      <ul class="mt-2 list-disc list-inside text-sm">
        <% blog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# ===== Title ===== %>
  <div class="px-6 pt-6 pb-2">
    <%= f.text_field :title,
        placeholder: "記事タイトル",
        autocomplete: "off",
        class: "w-full text-2xl font-bold border-none outline-none placeholder-gray-300 focus:ring-0 p-0 bg-transparent" %>
  </div>

  <%# ===== Tags ===== %>
  <div class="px-6 pb-4 flex items-center gap-2">
    <svg class="w-4 h-4 text-gray-400 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A2 2 0 013 12V7a4 4 0 014-4z" />
    </svg>
    <%= f.text_field :tag_names,
        value: blog.tags.map(&:name).join(", "),
        placeholder: "タグをカンマ区切りで入力（例: Rails, Ruby, JavaScript）",
        autocomplete: "off",
        class: "flex-1 text-sm border-none outline-none placeholder-gray-300 focus:ring-0 p-0 bg-transparent" %>
  </div>

  <div class="border-t border-gray-200"></div>

  <%# ===== Toolbar + View Mode Tabs ===== %>
  <div class="flex items-center justify-between px-4 py-2 border-b border-gray-200 bg-gray-50">
    <%# Toolbar %>
    <div class="flex items-center gap-0.5">
      <button type="button" data-action="markdown-editor#heading" class="toolbar-btn" title="見出し">
        <span class="text-xs font-bold">H</span>
      </button>
      <button type="button" data-action="markdown-editor#bold" class="toolbar-btn" title="太字">
        <span class="text-xs font-bold">B</span>
      </button>
      <button type="button" data-action="markdown-editor#italic" class="toolbar-btn" title="斜体">
        <span class="text-xs italic font-serif">I</span>
      </button>
      <button type="button" data-action="markdown-editor#strikethrough" class="toolbar-btn" title="取り消し線">
        <span class="text-xs line-through">S</span>
      </button>

      <span class="w-px h-4 bg-gray-300 mx-1"></span>

      <button type="button" data-action="markdown-editor#link" class="toolbar-btn" title="リンク">
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
        </svg>
      </button>
      <button type="button" data-action="markdown-editor#image" class="toolbar-btn" title="画像">
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </button>

      <span class="w-px h-4 bg-gray-300 mx-1"></span>

      <button type="button" data-action="markdown-editor#code" class="toolbar-btn" title="インラインコード">
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
        </svg>
      </button>
      <button type="button" data-action="markdown-editor#codeBlock" class="toolbar-btn" title="コードブロック">
        <span class="text-xs font-mono">{}</span>
      </button>
      <button type="button" data-action="markdown-editor#quote" class="toolbar-btn" title="引用">
        <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10H14.017zM0 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151C7.546 6.068 5.983 8.789 5.983 11h4v10H0z" />
        </svg>
      </button>

      <span class="w-px h-4 bg-gray-300 mx-1"></span>

      <button type="button" data-action="markdown-editor#bulletList" class="toolbar-btn" title="箇条書き">
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
      <button type="button" data-action="markdown-editor#orderedList" class="toolbar-btn" title="番号付きリスト">
        <span class="text-xs font-mono">1.</span>
      </button>
      <button type="button" data-action="markdown-editor#table" class="toolbar-btn" title="テーブル">
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M3 10h18M3 14h18M10 3v18M14 3v18M3 6a3 3 0 013-3h12a3 3 0 013 3v12a3 3 0 01-3 3H6a3 3 0 01-3-3V6z" />
        </svg>
      </button>
      <button type="button" data-action="markdown-editor#horizontalRule" class="toolbar-btn" title="水平線">
        <span class="text-xs">―</span>
      </button>
    </div>

    <%# View mode tabs %>
    <div class="flex items-center rounded-md border border-gray-300 overflow-hidden text-xs">
      <button type="button"
              data-action="markdown-editor#switchToEdit"
              data-markdown-editor-target="editTab"
              class="px-3 py-1 text-gray-500 hover:bg-gray-100 transition-colors">
        編集
      </button>
      <button type="button"
              data-action="markdown-editor#switchToSplit"
              data-markdown-editor-target="splitTab"
              class="px-3 py-1 bg-gray-200 text-gray-800 font-medium border-x border-gray-300 transition-colors">
        分割
      </button>
      <button type="button"
              data-action="markdown-editor#switchToPreview"
              data-markdown-editor-target="previewTab"
              class="px-3 py-1 text-gray-500 hover:bg-gray-100 transition-colors">
        プレビュー
      </button>
    </div>
  </div>

  <%# ===== Editor + Preview Split Pane ===== %>
  <div class="flex flex-1" style="min-height: 500px;">
    <%# Editor pane %>
    <div data-markdown-editor-target="editorPane" class="w-1/2 border-r border-gray-200">
      <%= f.text_area :content,
          data: { markdown_editor_target: "editor", action: "input->markdown-editor#onInput" },
          placeholder: "Markdownで本文を書く...",
          class: "w-full h-full p-4 border-none outline-none resize-none focus:ring-0 font-mono text-sm leading-relaxed bg-transparent placeholder-gray-300",
          style: "min-height: 500px;" %>
    </div>
    <%# Preview pane %>
    <div data-markdown-editor-target="previewPane" class="w-1/2 overflow-y-auto bg-white">
      <div data-markdown-editor-target="previewContent" class="markdown-preview p-4"></div>
    </div>
  </div>

  <div class="border-t border-gray-200"></div>

  <%# ===== Settings (collapsible) ===== %>
  <details class="px-6 py-4">
    <summary class="cursor-pointer text-sm text-gray-500 hover:text-gray-700 font-medium select-none">
      記事の設定
    </summary>
    <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= f.label :description, "概要", class: "block text-sm font-medium text-gray-600" %>
        <%= f.text_area :description, rows: 3,
            placeholder: "記事の概要を入力...",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 text-sm" %>
      </div>
      <div>
        <%= f.label :author, "著者", class: "block text-sm font-medium text-gray-600" %>
        <%= f.text_field :author,
            placeholder: "著者名",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 text-sm" %>
      </div>
      <div>
        <%= f.label :published_at, "公開日", class: "block text-sm font-medium text-gray-600" %>
        <%= f.datetime_local_field :published_at,
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 text-sm" %>
      </div>
      <div>
        <%= f.label :header_image, "ヘッダー画像", class: "block text-sm font-medium text-gray-600" %>
        <% if blog.header_image.attached? %>
          <div class="mt-1 mb-2">
            <%= image_tag blog.header_image, class: "max-h-32 rounded-md" %>
          </div>
        <% end %>
        <%= f.file_field :header_image, accept: "image/*",
            class: "mt-1 block w-full text-sm text-gray-500
                    file:mr-4 file:py-1.5 file:px-3 file:rounded file:border-0
                    file:text-sm file:font-medium file:bg-green-50 file:text-green-700
                    hover:file:bg-green-100" %>
      </div>
    </div>
  </details>

  <%# ===== Footer: Cancel + Submit ===== %>
  <div class="flex items-center justify-between px-6 py-4 border-t border-gray-200 bg-gray-50 rounded-b-lg">
    <div class="flex items-center gap-3 text-sm">
      <%= link_to "一覧に戻る", admin_blogs_path, class: "text-gray-500 hover:text-gray-700" %>
      <% if blog.persisted? %>
        <%= link_to "詳細に戻る", admin_blog_path(blog), class: "text-gray-500 hover:text-gray-700" %>
      <% end %>
    </div>
    <%= f.submit blog.persisted? ? "更新する" : "公開する",
        class: "px-6 py-2 bg-green-500 hover:bg-green-600 text-white text-sm font-medium rounded-md cursor-pointer transition-colors" %>
  </div>
<% end %>
